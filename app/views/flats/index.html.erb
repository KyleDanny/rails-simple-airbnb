
<div class="container">

  <div class="row mt-4">
    <div class="col-12">
      <h1> All our Flats </h1>
    </div>
  </div>

  <div class="row mt-0">
    <div class="col-12">
      <p> All <%= @flat_count %> flats. </p>
    </div>
  </div>

  <div class="row">
      <% @flats.each do |flat| %>
    <div class="col-4">

        <div class="card mb-4" style="width: 100%;">

          <img src="https://source.unsplash.com/random/?house" class="card-img-top" alt="...">
          <div style='background-image: url("#{flat.picture_url}")'></div>

          <div class="bg-grey p-3">
            <h3 class="card-title"> <%= flat.name %> </h3>
            <p class="card-subtitle mb-2 text-muted"> <%= flat.address %> </p>
            <ul class="list-inline">
              <li class="list-inline-item">ðŸ‘¤ <%= flat.number_of_guests %> </li>
              <li class="list-inline-item">â‚¬ <%= flat.price_per_night %> </li>
            </ul>
          </div>

          <div class="px-3 pt-2">
            <ul class="list-inline">
              <li class="list-inline-item"> <%=link_to "More info", flat %> </li>
              <li class="list-inline-item yellow"> <%=link_to "Edit", edit_flat_path(flat) %> </li>
              <li class="list-inline-item red"> <%=link_to "Remove", flat_path(flat), method: :delete, data: {confirm: "Are you sure?"} %> </li>
            </ul>
          </div>

        </div>

  </div>
      <% end %>



</div>
